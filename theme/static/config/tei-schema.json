			},
			"serialise": {
				"attribute": "margin-right",
				"value": "value()"
			},
			"default": "0"
		},
		{
			"name": "marginTop",
			"parse": {
				"rule": "@margin-top",
				"value": "@margin-top"
			},
			"serialise": {
				"attribute": "margin-top",
				"value": "value()"
			},
			"default": "0"
		},
		{
			"name": "marginBottom",
			"parse": {
				"rule": "@margin-bottom",
				"value": "@margin-bottom"
			},
			"serialise": {
				"attribute": "margin-bottom",
				"value": "value()"
			},
			"default": "0"
		},
		{
			"name": "firstLineIndent",
			"parse": {
				"rule": "@first-line-indent",
				"value": "@first-line-indent"
			},
			"serialise": {
				"attribute": "first-line-indent",
				"value": "value()"
			},
			"default": "0"
		},
		{
			"name": "type",
			"parse": {
				"rule": "@type",
				"value": "@type"
			},
			"serialise": {
				"attribute": "type",
				"value": "value()"
			}
		},
		{
			"name": "fontSize",
			"parse": [
				{
					"rule": "contains(@style, \"font-size-small\")",
					"value": "\"small\""
				},
				{
					"rule": "contains(@style, \"font-size-normal\")",
					"value": "\"normal\""
				},
				{
					"rule": "contains(@style, \"font-size-medium\")",
					"value": "\"medium\""
				},
				{
					"rule": "contains(@style, \"font-size-large\")",
					"value": "\"large\""
				}
			],
			"serialise": {
				"attribute": "style",
				"values": {
					"small": "font-size-small",
					"medium": "font-size-medium",
					"large": "font-size-large"
				}
			},
			"default": "normal"
		},
		{
			"name": "extract",
			"parse": {
				"rule": "@extract",
				"value": "@extract"
			},
			"serialise": {
				"attribute": "extract",
				"value": "value()"
			}
		},
		{
			"name": "sourceId",
			"parse": {
				"rule": "@data-source-id",
				"value": "@data-source-id"
			},
			"serialise": {
				"attribute": "data-source-id",
				"value": "value()"
			}
		},
		{
			"name": "target",
			"parse": {
				"rule": "@target",
				"value": "@target"
			},
			"serialise": {
				"attribute": "target",
				"value": "value()"
			},
			"default": ""
		},
		{
			"name": "witness",
			"parse": {
				"rule": "@wit",
				"value": "substring(@wit, 2)"
			},
			"serialise": {
				"attribute": "type",
				"value": "#{value()}"
			},
			"default": ""
		},
		{
			"name": "xmlid",
			"parse": {
				"rule": "@xml:id",
				"value": "@xml:id"
			},
			"serialise": {
				"attribute": "xml:id",
				"value": "value()"
			},
			"default": ""
		},
		{
			"name": "nestedTarget",
			"parse": {
				"rule": "@target",
				"value": "substring(@target, 2)"
			},
			"serialise": {
				"attribute": "target",
				"value": "#{value()}"
			}
		}
	]
