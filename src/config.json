{
    "workflow": [
        {
            "action": "trim-hidden"
        },
        {
            "action": "trim-empty"
        },
        {
            "action": "merge-styles",
            "params": {
                "extract_style_names": [
                    "margin-left",
                    "margin-right",
                    "margin-top",
                    "margin-bottom",
                    "text-align",
                    "text-indent",
                    "font-name",
                    "font-size",
                    "letter-spacing",
                    "font-style",
                    "font-weight",
                    "text-position"
                ],
                "style_mappings": {
                    "('font-name', 'Times New Roman')": "",
                    "('font-name', 'Arial')": "font-family-sans-serif",
                    "('text-indent', '0in')": "",
                    "('text-indent', '0.1972in')": "",
                    "('margin-left', '0in')": "",
                    "('font-size', '8pt')": "font-size-small",
                    "('margin-right', '0in')": "",
                    "('margin-top', '0in')": "",
                    "('text-align', 'justify')": "text-align-justify",
                    "('text-indent', '0.2008in')": "",
                    "('font-size', '13pt')": "font-size-large",
                    "('font-size', '11pt')": "",
                    "('font-size', '10pt')": "font-size-small",
                    "('letter-spacing', '0.0209in')": "letter-sparse",
                    "('font-size', '12pt')": "font-size-large",
                    "('letter-spacing', '-0.0016in')": "",
                    "('margin-bottom', '0in')": "",
                    "('font-style', 'italic')": "font-style-italic",
                    "('letter-spacing', '0.0016in')": "",
                    "('text-align', 'center')": "text-align-center",
                    "('letter-spacing', '0.028in')": "letter-sparse",
                    "('text-indent', '0.2in')": "",
                    "('font-size', '14pt')": "font-size-large",
                    "('letter-spacing', '-0.0028in')": "",
                    "('letter-spacing', '0.0028in')": "",
                    "('letter-spacing', '0.0043in')": "",
                    "('letter-spacing', '0.0126in')": "letter-sparse",
                    "('text-align', 'start')": "",
                    "('font-style', 'normal')": "",
                    "('letter-spacing', '0.0138in')": "letter-sparse",
                    "('margin-bottom', '0.1665in')": "",
                    "('margin-right', '0.0398in')": "",
                    "('font-name', 'Symbol')": "",
                    "('margin-left', '0.3937in')": "",
                    "('margin-bottom', '0.0555in')": "",
                    "('font-size', '9pt')": "font-size-small"
                }
            }
        },
        {
            "action": "modify-elements",
            "params": {
                "rules": [
                    {
                        "match": {
                            "tag": "{http://www.tei-c.org/ns/1.0}p",
                            "attrs": [
                                {
                                    "name": "style",
                                    "value": "text-align-justify no-indent font-size-large"
                                }
                            ]
                        },
                        "action": {
                            "tag": "{http://www.tei-c.org/ns/1.0}head",
                            "attrs": {
                                "style": null,
                                "type": "level-1"
                            }
                        }
                    },
                    {
                        "match": {
                            "attrs": [
                                {
                                    "name": "style",
                                    "value": "font-family-sans-serif font-size-small"
                                }
                            ]
                        },
                        "action": {
                            "tag": "{http://www.tei-c.org/ns/1.0}foreign",
                            "attrs": {
                                "style": null
                            }
                        }
                    },
                    {
                        "match": {
                            "attrs": [
                                {
                                    "name": "style",
                                    "value": "font-family-sans-serif"
                                }
                            ]
                        },
                        "action": {
                            "tag": "{http://www.tei-c.org/ns/1.0}foreign",
                            "attrs": {
                                "style": null
                            }
                        }
                    },
                    {
                        "match": {
                            "tag": "{http://www.tei-c.org/ns/1.0}span",
                            "attrs": [
                                {
                                    "name": "style",
                                    "value": "font-style-italic"
                                }
                            ]
                        },
                        "action": {
                            "tag": "{http://www.tei-c.org/ns/1.0}pb",
                            "attrs": {
                                "style": null,
                                "n": "text()"
                            },
                            "text": null
                        }
                    },
                    {
                        "match": {
                            "tag": "{http://www.tei-c.org/ns/1.0}span",
                            "attrs": [
                                {
                                    "name": "style"
                                }
                            ]
                        },
                        "action": {
                            "tag": "{http://www.tei-c.org/ns/1.0}hi"
                        }
                    },
                    {
                        "match": {
                            "tag": "{http://www.tei-c.org/ns/1.0}span"
                        },
                        "action": {
                            "tag": "{http://www.tei-c.org/ns/1.0}seg"
                        }
                    }
                ]
            }
        },
        {
            "action": "modify-elements",
            "params": {
                "rules": [
                    {
                        "match": {
                            "tag": "{http://www.tei-c.org/ns/1.0}pb",
                            "attrs": [
                                {
                                    "name": "n",
                                    "value": " "
                                }
                            ]
                        },
                        "action": {
                            "delete": true
                        }
                    },
                    {
                        "match": {
                            "text": " "
                        },
                        "action": {
                            "tag": "{http://www.tei-c.org/ns/1.0}seg",
                            "attrs": {
                                "style": null
                            }
                        }
                    }
                ]
            }
        },
        {
            "action": "simplify-tree"
        },
        {
            "action": "strip-whitespace"
        }
    ],
    "post-process": [
        {
            "action": "regex-replace",
            "params": {
                "regex": "n=\"\\[([0-9XVIxvi]+)\\]\\s*\"",
                "replace": "n=\"\\g<1>\""
            }
        }
    ]
}
